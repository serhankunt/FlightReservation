@{
	Layout = null;
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

<div class="d-flex justify-content-center align-items-center" style="height:97vh">
	<div class="col-4">
		<div class="card">
			<div class="card-header">
				<h1>>@localization.GetKey("RegisterForm").Value</h1>
				<p>@localization.GetKey("RegisterFormDescription").Value</p>
				<div class="dropdown">
					<button class="btn btn-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
						@if(ViewBag.SelectedLanguage == "en-US")
						{
							@localization.GetKey("English").Value
						}else{
						@localization.GetKey("Turkish").Value
						}
					</button>
					<ul class="dropdown-menu">
						<li>
							<a asp-controller="Shared"
							   asp-action="ChangeLanguage"
							   asp-route-culture="en-US"
							   class="dropdown-item">
								@localization.GetKey("English").Value
							</a>
						</li>

						<li>
							<a asp-controller="Shared"
							   asp-action="ChangeLanguage"
							   asp-route-culture="tr-TR"
							   class="dropdown-item">
								@localization.GetKey("Turkish").Value
							</a>
						</li>
					</ul>
				</div>
				
			</div>
			<div class="card-body">
				<form asp-controller="Account" asp-action="Register" method="post" autocomplete="off">
					<div class="form-group">
						<label>@localization.GetKey("FirstName").Value</label>
						<input class="form-control" name="firstName" required minlength="3"/>
					</div>
					<div class="form-group mt-2">
						<label>@localization.GetKey("LastName").Value</label>
						<input class="form-control" name="lastName" required minlength="3"/>
					</div>
					<div class="form-group mt-2">
						<label>@localization.GetKey("Email").Value</label>
						<input type="email" class="form-control" name="email" required minlength="3"  />
					</div>
					<div class="form-group mt-2">
						<label>@localization.GetKey("Password").Value</label>
						<input type="password" class="form-control" name="password" required minlength="6" maxlength="6" />
					</div>
					<div class="form-group mt-2">
						<button type="submit" class="btn btn-dark w-100">@localization.GetKey("SignUp").Value</button>
					</div>
				</form>
			</div>
			<div class="card-header">
				<a asp-controller="Account" asp-action="Login">@localization.GetKey("GoToLoginPage").Value</a>
			</div>
		</div>
	</div>
</div>